<h1>Editing Book</h1>

<%= form_for(@book) do |f| %>
      <% if @book.errors.any? %>
      <%= @book.errors.count %>
      <% @book.errors.full_messages.each do |message| %>
      <%= message %>
      <% end %>
      <% end %>

      
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Body</h4>
<%= f.text_area :body %>
<%= f.submit 'Update Book' %>
<% end %>
<p><%= link_to "Show",book_path(@book.id) %>
   <%=link_to "back",books_path %>
</p>